{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tauri-apprustscale",
  "version": "0.1.0-rc.2",
  "identifier": "com.rustscale.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "bundle": {
    "active": true,
    "targets": [
      "nsis"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "onnxruntime.dll",
      "openvino*.dll",
      "tbb*.dll",
      "models/*"
    ],
    "windows": {
      "nsis": {
        "compression": "lzma",
        "installerIcon": "icons/icon.ico",
        "installMode": "currentUser",
        "languages": [
          "English"
        ]
      }
    }
  },
  "app": {
    "windows": [
      {
        "title": "tauri-apprustscale",
        "width": 800,
        "height": 600
      }
    ]
  }
}